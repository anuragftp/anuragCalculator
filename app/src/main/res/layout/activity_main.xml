<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/TextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginLeft="120dp"
            android:text="Calculator"
            android:textSize="36dp" />

        <EditText
            android:id="@+id/EditText1"
            android:layout_width="279dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="150dp"
            android:layout_marginLeft="60dp"
            android:autofillHints="Enter Number :"
            android:paddingHorizontal="80dp"
            android:paddingVertical="20sp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Button0"
            android:layout_marginVertical="260dp"
            android:layout_marginLeft="135dp"
            android:text="CLR"
            />


        <Button
            android:id="@+id/Button1"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="320dp"
            android:layout_marginLeft="25dp"
            android:text="1" />

        <Button
            android:id="@+id/Button2"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="320dp"
            android:layout_marginLeft="115dp"
            android:text="2"

            />

        <Button
            android:id="@+id/Button3"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="320dp"
            android:layout_marginLeft="205dp"
            android:text="3"

            />

        <Button
            android:id="@+id/Button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="320dp"
            android:layout_marginLeft="290dp"
            android:text="+"

            />

        <Button
            android:id="@+id/Button5"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="380dp"
            android:layout_marginLeft="25dp"
            android:text="5"

            />

        <Button
            android:id="@+id/Button6"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="380dp"
            android:layout_marginLeft="115dp"
            android:text="6"

            />

        <Button
            android:id="@+id/Button7"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="380dp"
            android:layout_marginLeft="205dp"
            android:text="7"

            />

        <Button
            android:id="@+id/Button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="380dp"
            android:layout_marginLeft="290dp"
            android:text="-"

            />

        <Button
            android:id="@+id/Button9"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="440dp"
            android:layout_marginLeft="25dp"
            android:text="7" />

        <Button
            android:id="@+id/Button10"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="440dp"
            android:layout_marginLeft="115dp"
            android:text="8" />

        <Button
            android:id="@+id/Button11"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="440dp"
            android:layout_marginLeft="205dp"
            android:text="9" />

        <Button
            android:id="@+id/Button12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="440dp"
            android:layout_marginLeft="290dp"
            android:text="*"

            />

        <Button
            android:id="@+id/Button13"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="500dp"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="30dp"
            android:text="." />

        <Button
            android:id="@+id/Button14"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="500dp"
            android:layout_marginLeft="115dp"
            android:layout_marginBottom="30dp"
            android:text="0" />

        <Button
            android:id="@+id/Button15"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="500dp"
            android:layout_marginLeft="205dp"
            android:layout_marginBottom="30dp"
            android:text="=" />

        <Button
            android:id="@+id/Button16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="500dp"
            android:layout_marginLeft="290dp"
            android:layout_marginBottom="30dp"
            android:text="/"

            />


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>